<Window x:Class="WPFZahnradaufgabeGruppeD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFZahnradaufgabeGruppeD"
        mc:Ignorable="d"
        Title="Zahnradrechner" Height="550" Width="1000">

    <Grid>
        
        <Label Content="Willkommen beim Zahnradrechner" HorizontalAlignment="Left" Margin="5,5,0,0" VerticalAlignment="Top" Width="344" FontSize="20" FontWeight="Bold" />


        <Label  Content="Zähnezahl :"        HorizontalAlignment="Left" Margin="40,115,0,0" VerticalAlignment="Top" Height="25" Width="75"/>
        <TextBox  Name="zähnezahl"           HorizontalAlignment="Left" Margin="115,115,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="25" Width="40" />

        <Label Content="Modul :"             HorizontalAlignment="Left" Margin="40,145,0,0" VerticalAlignment="Top" Height="25" Width="65"/>
        <ComboBox Name="DropModul"           HorizontalAlignment="Left" Margin="117,145,0,0" VerticalAlignment="Top" Width="120" Height="25" >
            <ComboBoxItem>0,5</ComboBoxItem>
            <ComboBoxItem>0,8</ComboBoxItem>
            <ComboBoxItem>1</ComboBoxItem>
            <ComboBoxItem>1,5</ComboBoxItem>
            <ComboBoxItem>2</ComboBoxItem>
            <ComboBoxItem>8</ComboBoxItem>
        </ComboBox>




        <Button Content="Berechnen" HorizontalAlignment="Left" Margin="115,215,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <TextBlock Name="ausgabe" HorizontalAlignment="Left" Margin="369,204,0,0" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Top"/>


    </Grid>
</Window>
