<Window x:Class="WPFZahnradaufgabeGruppeD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFZahnradaufgabeGruppeD"
        mc:Ignorable="d"
        Title="Zahnradrechner"  Height="550" Width="1000" Icon="Niklas2.png">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFA5FFA5"/>
                <GradientStop Color="#FFFF7D7D" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Label Content="Willkommen beim Zahnradrechner" HorizontalAlignment="Left" Margin="40,5,0,0" VerticalAlignment="Top" Width="344" FontSize="20" FontWeight="Bold" />
        <Label Content="Wählen Sie zwischen einem Innen- oder Außenverzahnten Zahnrad" HorizontalAlignment="Left" Margin="40,45,0,0" VerticalAlignment="Top" Width="800" FontSize="18" FontWeight="Bold" />


        <Button Name="Close" Content="Beenden" Margin="363,432,363,0" Background="#FFA953FF" BorderBrush="#FF7E7E7E" Foreground="Black" Height="60" Click="Close_Click_1" BorderThickness="3,3,3,3" FontSize="16" FontWeight="Bold" VerticalAlignment="Top"/>
        <Button Content="Außenverzahnung" HorizontalAlignment="Left" Margin="235,295,0,0" VerticalAlignment="Top" Width="224" Click="Button_Click" Height="75" Background="#FFFF6363" FontSize="16" FontWeight="Bold" BorderThickness="3,3,3,3" SnapsToDevicePixels="True" />
        <Button Content="Innenverzahnung" HorizontalAlignment="Left" Margin="533,295,0,0" VerticalAlignment="Top" Width="224" Click="Button_Click_2" Height="75" Background="#FF1CCB00" FontSize="16" FontWeight="Bold" BorderThickness="3,3,3,3" />
        <Image HorizontalAlignment="Center" Height="177" Margin="0,90,0,0" VerticalAlignment="Top" Width="182" Source="Niklas2.png" />
        <Image HorizontalAlignment="Left" Height="100" Margin="611,175,0,0" VerticalAlignment="Top" Width="100"/>

    </Grid>
</Window>
